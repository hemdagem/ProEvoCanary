@model ProEvoCanary.Web.Models.ResultsListModel

@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="center-align">Head to Head Records</h2>

<div class="row">
    <div class="input-field col s4">
        <select id="playerOne" name="playerOne">
            @foreach (var players in Model.PlayerList)
            {
                <option value="@players.PlayerId" @(players.PlayerId == Model.PlayerOne ? "selected='selected'" : "")>@players.PlayerName</option>
            }
        </select>
    </div>
    <div class="input-field col s4 center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action" onclick="ProEvo.viewResult()">
            View
            <i class="material-icons right">pageview</i>
        </button>
    </div>
    <div class="input-field col s4">
        <select id="playerTwo" name="playerTwo">
            @foreach (var players in Model.PlayerList)
            {
                <option value="@players.PlayerId" @(players.PlayerId == Model.PlayerTwo ? "selected='selected'" : "")>@players.PlayerName</option>
            }
        </select>
    </div>
</div>

@if (@Model.HeadToHead != null)
{
    <div class="row">
        <div class="col s4">
            <div class="card-panel teal">
                <span class="white-text">
                    Wins: @Model.HeadToHead.PlayerOneWins
                </span>
            </div>
        </div>
        <div class="col s4">
            <div class="card-panel teal">
                <span class="white-text">
                    Draws: @Model.HeadToHead.TotalDraws
                </span>
            </div>
        </div>
        <div class="col s4">
            <div class="card-panel teal">
                <span class="white-text">
                    Wins: @Model.HeadToHead.PlayerTwoWins
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">

            @if (Model.HeadToHead.Results.Count > 0)
            {
                <h2>
                    <small>Previous Meetings</small>
                </h2>
                <table>
                    @foreach (var item in Model.HeadToHead.Results)
                    {
                        <tr>
                            <td>@item.HomeTeam</td>
                            <td>@item.HomeScore</td>
                            <td>@item.AwayScore</td>
                            <td>@item.AwayTeam</td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
}
