@model ProEvoCanary.Models.ResultsModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Results", FormMethod.Post))
{
    <div class="row">
        Update result 
    </div>
    @Html.HiddenFor(m => m.ResultId)
    @Html.HiddenFor(m => m.EventId)
    <div class="row">
        <div class="col s6">
            <label>
                @Model.HomeTeam
                @Html.TextBoxFor(m => m.HomeScore, new { @placeholder = "Enter your password" })
            </label>
        </div>
        <div class="col s6">
            <label>
                @Model.AwayTeam
                @Html.TextBoxFor(m => m.AwayScore, new { @placeholder = "Enter your email address" })
            </label>
        </div>

    </div>
    <div class="row">
        <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>

}
