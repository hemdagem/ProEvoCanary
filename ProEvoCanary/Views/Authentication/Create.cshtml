@model ProEvoCanary.Models.CreateUserModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Authentication", FormMethod.Post))
{
    <div class="row">
        <div class="large-12 columns">
            <label>
                Username
                @Html.TextBoxFor(m => m.Username, new { @placeholder = "Enter your username" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>
                Password
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter your password" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>
                Email Address
                @Html.TextBoxFor(m => m.EmailAddress, new { @placeholder = "Enter your email address" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>
                Forename
                @Html.TextBoxFor(m => m.Forename, new { @placeholder = "Enter your forename" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>
                Surname
                @Html.TextBoxFor(m => m.Surname, new { @placeholder = "Enter your surname" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <input type="submit" value="submit" class="button" />
        </div>
    </div>

}
