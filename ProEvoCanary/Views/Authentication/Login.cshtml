@model ProEvoCanary.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, (new { returnUrl = ViewBag.ReturnUrl, @class = "col s12" })))
    {
        <div class="row">
            <div class="input-field col s6">
                @Html.TextBoxFor(m => m.Username, new { @class = "validate" })
                @Html.LabelFor(m => m.Username)
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                @Html.LabelFor(m => m.Password)
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
        </button>

    }
</div>
