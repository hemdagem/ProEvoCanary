@model List<ProEvoCanary.Models.PlayerModel>
<div class="block TopPlayers">
    <h2>Top Players</h2>

    <table width="100%" cellpadding="0" cellspacing="0">
        <tr align="center">
            <td>
                P
            </td>
            <td>
                Name
            </td>
            <td>
                Pts Av.
            </td>
            <td>
                Gls Av.
            </td>
        </tr>

        @for (int index = 0; index < Model.Count; index++)
        {
            var item = Model[index];
            <tr align="center" style="height: 20px;">

                <td>
                    @(index+1)
                </td>
                <td>
                    <a href="#">@item.PlayerName</a>
                </td>
                <td>
                    @item.PointsPerGame
                </td>
                <td>
                    @item.GoalsPerGame
                </td>
            </tr>
        }
    </table>
</div>