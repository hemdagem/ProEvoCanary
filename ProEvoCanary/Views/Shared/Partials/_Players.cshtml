@model List<ProEvo45.Models.PlayerModel>
ListItems

<table width="100%" cellpadding="0" cellspacing="0">
    <tr align="center">
        <th>
            P
        </th>
        <th>
            Name
        </th>
        <th>
            Pts Av.
        </th>
        <th>
            Gls Av.
        </th>
    </tr>

    @for (int index = 0; index < Model.Count; index++)
    {
        var item = Model[index];
        <tr align="center" style="height: 20px;">

            <td>
                @index+1
            </td>
            <td>
                <a href="#">@item.PlayerName</a>
            </td>
            <td>
                @item.PointsPerGame
            </td>
            <td>
                @item.GoalsPerGame
            </td>
        </tr>
    }
</table>